{
  "name": "littleprinter",
  "version": "0.0.1",
  "description": "A service that can print receipts periodically with useful or not so useful material",
  "main": "src/index.ts",
  "dependencies": {
    "axios": "^0.19.2",
    "canvas": "^2.6.1",
    "dayjs": "^1.8.28",
    "dotenv": "^8.2.0",
    "firebase": "^7.15.3",
    "fs-extra": "^9.0.1",
    "jsonfile": "^6.0.1",
    "pdfkit": "^0.11.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/dotenv": "^8.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/jsonfile": "^6.0.0",
    "@types/node": "^14.0.13",
    "@types/pdfkit": "^0.10.5",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "start": "NODE_ENV=development OFFLINE=true ts-node src/index.ts",
    "start:live": "NODE_ENV=development ts-node src/index.ts",
    "start:live:save": "NODE_ENV=development SAVE_OFFLINE=true ts-node src/index.ts",
    "lint": "tsc --noEmit",
    "prod": "NODE_ENV=production ts-node src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --max-warnings=3"
  }
}
